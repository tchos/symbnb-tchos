{# Importation du gabarit globale #}
{% extends 'base.html.twig' %}

{#  #}
{% block title %}Editer l'annonce{% endblock %}

{# On prévient symfony que l'on veut use un thème particulier se trouve dans ce fichier #}
{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="h1">Modifier l'annonce:  {{ ad.title }}!</h1>

        {# Affichage du formulaire créé avec symfony#}
        {{ form_start(form) }}

        {{ form_widget(form) }} 

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{# code javascripts pour ajouter dynamiquement des champs #}
{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}