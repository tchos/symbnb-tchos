{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le commentaire n° {{comment.id}}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-5">Modifier le commentaire n° {{comment.id}}</h2>

        <div class="alert alert-info">
            <strong>Annonce liée: </strong>{{ comment.ad.title }}<br>
            <strong>Auteur: </strong>{{ comment.author.fullName }}<br>
            <strong>Date de création: </strong>{{ comment.createdAt | date ('d/m/Y H:i') }}<br>
        </div>
        
        {{ form_start(form) }}

        {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i>
                Enregistrer les modifications
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
